<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.dupreinca.dupree.mh_fragments_menu.Reporte_CupoSaldoConf_Fragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:id="@+id/cardViewBackGround2"
                app:cardBackgroundColor="@color/gray_2"
                android:layout_margin="2.5dp"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="10dp"
                card_view:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvNombreAsesora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/transparent"
                    android:padding="10dp"
                    android:text="ENORELIS C. PEREZ H."
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textColor="@color/gray_6"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <android.support.v7.widget.CardView

            android:id="@+id/cardViewBackGround"
            app:cardBackgroundColor="@color/transp_azulDupree"
            android:layout_margin="2.5dp"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="10dp"
            card_view:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--LinearLayout
                    android:orientation="vertical"

                    android:layout_width="match_parent"
