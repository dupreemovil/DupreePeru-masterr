<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
    android:paddingTop="0dp"
    android:paddingEnd="0dp"
    android:paddingStart="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView

                android:id="@+id/cardViewBackGround"
                app:cardBackgroundColor="@color/transp_azulDupree"
                android:layout_margin="2.5dp"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="10dp"
                card_view:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout


                    android:orientation="vertical"
                    android:layout_margin="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <android.support.v7.widget.CardView
                            android:layout_margin="0.5dp"
                            card_view:cardCornerRadius="6dp"
                            card_view:cardElevation="10dp"
                            card_view:cardUseCompatPadding="true"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:textStyle="normal"
                                    android:textSize="14sp"
                                    android:textColor="@color/azulDupree"
                                    android:text="CÓDIGO SMS:"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginStart="32dp"
                                    android:layout_marginEnd="32dp"
                                    >
                                    <EditText
                                        android:id="@+id/code_txtCode1"
                                        android:labelFor="@+id/code_txtCode1"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"


                                        android:inputType="text"
                                        android:maxLength="4"
                                        android:textAllCaps="true"
                                        android:textSize="24sp"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:background="@drawable/edittext_bottom_line" />
                                    <!--EditText
                                        android:id="@+id/code_txtCode2"
                                        android:labelFor="@+id/code_txtCode2"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_marginStart="10dp"
                                        android:inputType="text"
                                        android:maxLength="1"
                                        android:textSize="24sp"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:background="@drawable/edittext_bottom_line" />
                                    <EditText
                                        android:id="@+id/code_txtCode3"
                                        android:labelFor="@+id/code_txtCode3"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_marginStart="10dp"
                                        android:inputType="text"
                                        android:maxLength="1"
                                        android:textSize="24sp"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:background="@drawable/edittext_bottom_line" />
                                    <EditText
                                        android:id="@+id/code_txtCode4"
                                        android:labelFor="@+id/code_txtCode4"
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_marginStart="10dp"
                                        android:inputType="text"
                                        android:maxLength="1"
                                        android:textSize="24sp"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:background="@drawable/edittext_bottom_line" /-->
                                </LinearLayout>
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:layout_margin="0.5dp"
                            card_view:cardCornerRadius="6dp"
                            card_view:cardElevation="10dp"
                            card_view:cardUseCompatPadding="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:textStyle="normal"
                                    android:textSize="14sp"
                                    android:textColor="@color/azulDupree"
                                    android:text="TÉRMINOS: "/>

                                <TextView
                                    android:id="@+id/tvTermins"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:textStyle="normal"
                                    android:textSize="14sp"
                                    android:textColor="@color/gray_6"
                                    android:text="AL UD USR ESTA OO, DECLARA QUE ACEPTA ESTOS TERMINOS Y SERVICIOS DE TALES COSAS Y MAS POR AQUI Y POR ALLA SIN NECESIDAD DE ESTO Y AQUELLO, A FIN DE GARANTIZAR QUE SI Y QUE NO SE PUEDE HACER CON ESTA CUANTES, SALUDOS Y EXITOS."/>
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:layout_margin="0.5dp"
                            card_view:cardCornerRadius="6dp"
                            card_view:cardElevation="10dp"
                            card_view:cardUseCompatPadding="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:gravity="end"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:textStyle="normal"
                                    android:textSize="14sp"
                                    android:textColor="@color/azulDupree"
                                    android:text="Acepto los términos: "/>

                                <android.support.v7.widget.SwitchCompat
                                    android:id="@+id/swtTermins"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    app:theme="@style/BrandedSwitch.control"
                                    android:shadowColor="@color/azulDupree"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:cardBackgroundColor="@color/transp_azulDupree"
                android:layout_margin="2.5dp"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="10dp"
                card_view:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_margin="1dp"
                android:gravity="end"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnCancelar"
                    android:text="Cancelar"
                    android:textColor="@color/colorAccent"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnAceptar"
                    android:text="Aceptar"
                    android:textColor="@color/colorAccent"
                    android:background="@color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>