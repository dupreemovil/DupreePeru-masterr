<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.dupreinca.dupree.mh_fragments_main.CatalogosFragment">

    <!--LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"-->

        <LinearLayout
            android:background="@color/gray_2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="@color/colorPrimaryDark"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="10dp"
                card_view:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7">

                <ImageView
                    android:id="@+id/imgPremio"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/portada_c12" />

                <TextView
                    android:id="@+id/txtNamePremio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="CampaÃ±a 12"
                    android:textAlignment="center"
                    android:layout_gravity="bottom"
                    android:background="@color/transp_PrimaryDark"
                    android:textColor="@color/gray_2"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                card_view:cardBackgroundColor="@color/colorPrimaryDark"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="10dp"
                card_view:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3">
                <TextView
                    android:id="@+id/txtCodePremio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="12"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/gray_2"
                    android:textSize="50sp"
                    android:textStyle="bold|italic"/>
            </android.support.v7.widget.CardView>


        </LinearLayout>


    <!--/LinearLayout-->

</FrameLayout>