<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        card_view:cardBackgroundColor="@color/colorPrimaryDark"
        android:id="@+id/cardViewBackGround"
        android:layout_margin="1.5dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvNameCamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/gray_6"
                android:text="PEDIDOS"/>
            <TextView
                android:id="@+id/tvCantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/gray_6"
                android:text="$ 611235"/>
            <!--CircleProgressView:cpv_seekMode="false", habilita toich para seleccionar el valor-->

            <!--CircleProgressView:cpv_blockCount="18"
                CircleProgressView:cpv_blockScale="0.9, modo bloque o continuo-"-->
            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/circleProgress"

                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center_horizontal"

                CircleProgressView:cpv_blockCount="18"
                CircleProgressView:cpv_blockScale="1.8"

                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_barColor="@color/red_1"
                CircleProgressView:cpv_barWidth="20dp"
                CircleProgressView:cpv_innerContourSize="0dp"
                CircleProgressView:cpv_maxValue="100"
                CircleProgressView:cpv_outerContourSize="0dp"
                CircleProgressView:cpv_rimColor="@color/gray_4"
                CircleProgressView:cpv_rimWidth="20dp"
                CircleProgressView:cpv_seekMode="false"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_spinColor="@color/azulDupree"
                CircleProgressView:cpv_textColor="@color/green_check"
                CircleProgressView:cpv_textScale="1"
                CircleProgressView:cpv_unit="%"
                CircleProgressView:cpv_unitColor="@color/azulDupree2"
                CircleProgressView:cpv_unitPosition="right_top"
                CircleProgressView:cpv_unitScale="1"
                CircleProgressView:cpv_value="40" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>