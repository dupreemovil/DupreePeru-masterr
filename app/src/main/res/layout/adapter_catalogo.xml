<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_2"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView


        android:layout_margin="2.5dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true"

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal"
                android:padding="5dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imagen"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_flor_white_180x180"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/gray_4"/>
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="14sp"
                    android:text="No cambia"/>
            </LinearLayout>


            <LinearLayout
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/gray_6"
                    android:text="CÓDIGO 2169"/>


                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/gray_6"
                    android:text="Salida de ban con turbante HHH JNNJJ JJJ"/>

                <TextView
                    android:id="@+id/tvPage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/gray_5"
                    android:text="p. 150"
                    android:gravity="start|center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="0.3"
                android:layout_width="0dp"

                android:gravity="center_vertical|center_horizontal"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView


                    android:layout_margin="2.5dp"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardElevation="10dp"
                    card_view:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/gray_3"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvValor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:padding="5dp"


                        android:textColor="@color/azulDupree"
                        android:text="$ 64,999"/>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:id="@+id/ctn_IncDecCant"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="center_vertical|center_horizontal">

                        <ImageButton
                            android:id="@+id/imgB_Decrease"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_remove_circle_outline_white_36dp"
                            android:tint="@color/azulDupree"
                            android:background="@color/transparent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical|center_horizontal">

                        <TextView
                            android:id="@+id/tvCantidad"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:gravity="center_horizontal|center_vertical"
                            android:text="25" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="center_vertical|center_horizontal">

                        <ImageButton
                            android:id="@+id/imgB_Increase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_add_circle_white_36dp"
                            android:tint="@color/azulDupree"
                            android:background="@color/transparent" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ctn_AddCart"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="center_vertical|center_horizontal">

                        <ImageButton
                            android:id="@+id/imgB_AddCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_add_shopping_cart_white_24dp"
                            android:tint="@color/azulDupree"
                            android:background="@color/transparent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.65"
                        android:gravity="center_vertical|center_horizontal">

                        <TextView
                            android:id="@+id/tvAddCart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/azulDupree"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="añadir" />

                    </LinearLayout>


                </LinearLayout>




            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>